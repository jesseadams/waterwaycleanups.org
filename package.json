{
  "name": "waterways-cleanup",
  "version": "1.0.0",
  "description": "Waterways Cleanup Project",
  "scripts": {
    "dev": "concurrently \"hugo server\" \"npm run watch:assets\" \"npm run watch:css\"",
    "build": "npm run clean && npm run build:css && npm run build:assets && npm run minify:css && HUGO_ENV=production hugo --minify",
    "build:assets": "webpack --mode production",
    "build:css": "tailwindcss -i ./static/css/src/tailwind.css -o ./static/css/tailwind-output.min.css --minify",
    "watch:assets": "webpack --watch --mode development",
    "watch:css": "tailwindcss -i ./static/css/src/tailwind.css -o ./static/css/tailwind-output.css --watch",
    "clean": "rm -rf static/css/tailwind-output*.css static/css/*.map static/js/main-bundle*.js static/js/*-bundle*.js static/js/*.LICENSE.txt static/js/*.map static/js/*chunk*.js",
    "start": "npm run build && hugo server",
    "minify:css": "./node_modules/.bin/postcss ./static/css/*.css --use cssnano -d ./static/css/ --no-map"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "simple-parallax-js": "^5.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "cssnano": "^7.0.7",
    "daisyui": "^5.0.43",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.8",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
