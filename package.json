{
  "name": "waterways-cleanup",
  "version": "1.0.0",
  "description": "Waterways Cleanup Project",
  "scripts": {
    "dev": "concurrently \"hugo server\" \"npm run watch:assets\"",
    "dev:full": "concurrently \"npm run dev\" \"npm run api:local\"",
    "build": "npm run build:assets && hugo --minify",
    "build:assets": "webpack --mode production",
    "watch:assets": "webpack --watch --mode development",
    "clean": "rm -f static/css/tailwind-output.css static/js/main-bundle.js",
    "start": "npm run build && hugo server",
    "api:build": "sam build",
    "api:local": "./scripts/local-dev.sh",
    "api:deploy:staging": "sam deploy --config-env staging",
    "api:deploy:prod": "sam deploy --config-env prod",
    "db:local": "docker-compose up -d dynamodb-local dynamodb-admin",
    "db:stop": "docker-compose down"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "lineicons-react": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-parallax-js": "^5.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "daisyui": "^5.0.43",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.8",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
